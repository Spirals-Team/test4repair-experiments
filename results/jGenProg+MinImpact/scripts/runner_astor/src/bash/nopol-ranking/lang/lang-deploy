#!/bin/bash

for bug in `seq 1 50`
do
  echo "Launching nopol ranking node for lang_${bug} ..."
  oarsub -l walltime=00:10:00 -O ~/defects4j-repair/logs/nopol-ranking/lang/stdout/lang_${bug}.stdout -E ~/defects4j-repair/logs/nopol-ranking/lang/stderr/lang_${bug}.stderr "~/defects4j-repair/scripts/nopol-ranking/lang/lang-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Lang nopol ranking node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

for bug in `seq 51 65`
do
  echo "Launching nopol ranking node for lang_${bug} ..."
  oarsub -l walltime=00:10:00 -O ~/defects4j-repair/logs/nopol-ranking/lang/stdout/lang_${bug}.stdout -E ~/defects4j-repair/logs/nopol-ranking/lang/stderr/lang_${bug}.stderr "~/defects4j-repair/scripts/nopol-ranking/lang/lang-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Lang nopol ranking node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

echo 'Done.'
