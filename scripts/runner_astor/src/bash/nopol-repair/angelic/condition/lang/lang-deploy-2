#!/bin/bash

for bug in `seq 51 65`
do
  echo "Launching nopol repair node for lang_${bug} ..."
  oarsub -l walltime=02:00:00 -O ~/defects4j-repair/logs/nopol-repair/angelic/condition/lang/stdout/lang_${bug}.stdout -E ~/defects4j-repair/logs/nopol-repair/angelic/condition/lang/stderr/lang_${bug}.stderr "~/defects4j-repair/scripts/nopol-repair/angelic/condition/lang/lang-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Lang nopol repair node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

echo 'Done.'
