#!/bin/bash

for bug in `seq 1 27`
do
  echo "Launching nopol repair node for time_${bug} ..."
  oarsub -l walltime=02:00:00 -O ~/defects4j-nopol/logs/brutpol-repair/angelic/condition/time/stdout/time_${bug}.stdout -E ~/defects4j-nopol/logs/brutpol-repair/angelic/condition/time/stderr/time_${bug}.stderr "~/defects4j-nopol/scripts/brutpol-repair/angelic/condition/time/time-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Time nopol repair node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

echo "Done."
