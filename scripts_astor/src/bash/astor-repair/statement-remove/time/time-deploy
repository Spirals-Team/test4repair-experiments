#!/bin/bash

for bug in `seq 1 27`
do
  echo "Launching astor repair node for time_${bug} ..."
  oarsub -l walltime=02:00:00 -O ~/defects4j-repair/logs/astor-repair/statement-remove/time/stdout/time_${bug}.stdout -E ~/defects4j-repair/logs/astor-repair/statement-remove/time/stderr/time_${bug}.stderr "~/defects4j-repair/scripts/astor-repair/statement-remove/time/time-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Time astor repair node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

echo "Done."
