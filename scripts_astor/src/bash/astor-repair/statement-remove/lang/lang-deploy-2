#!/bin/bash

for bug in `seq 51 65`
do
  echo "Launching astor repair node for lang_${bug} ..."
  oarsub -l walltime=02:00:00 -O ~/defects4j-repair/logs/astor-repair/statement-remove/lang/stdout/lang_${bug}.stdout -E ~/defects4j-repair/logs/astor-repair/statement-remove/lang/stderr/lang_${bug}.stderr "~/defects4j-repair/scripts/astor-repair/statement-remove/lang/lang-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Lang astor repair node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

echo 'Done.'
