#!/bin/bash

for bug in `seq 1 50`
do
  echo "Launching astor repair node for math_${bug} ..."
  oarsub -l walltime=02:00:00 -O ~/defects4j-repair/logs/astor-repair/statement-remove/math/stdout/math_${bug}.stdout -E ~/defects4j-repair/logs/astor-repair/statement-remove/math/stderr/math_${bug}.stderr "~/defects4j-repair/scripts/astor-repair/statement-remove/math/math-node ${bug}"
done

while [ $(oarstat -u | grep rsommerard | wc -l) -gt 0 ]
do
  echo "Math astor repair node running: $(oarstat -u | grep rsommerard | wc -l)"
  sleep 5
done

echo 'Done.'
